<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Courses.views.CourseDetails">
    <!--imagen del post -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FFE7EE">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar"
            />

    </FrameLayout>
    <!--Contenido del post -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:background="@drawable/cards"
            android:orientation="vertical">
            <LinearLayout
                android:background="#DDDDDD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/namePost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo_2_black"
                    android:hint="Titulo post"
                    android:textColor="#1F1F39"
                    android:textSize="26sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:hint="Tiempo de lectura estimado" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#DDDDDD">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Acerca de este auto"
                    android:textColor="#1F1F39"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/openAr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#C13737"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Abrir Ar"
                    android:textAllCaps="false" />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="370dp"
                        android:layout_height="230dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam euismod tortor a ipsum pharetra, quis ultricies odio elementum. Maecenas accumsan elit sed elit blandit varius. Aliquam eget nunc urna. "
                        />
                </LinearLayout>

            </ScrollView>

                <Button
                    android:id="@+id/seeComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="right"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_semibold"
                    android:backgroundTint="@color/blue"
                    android:text="Ver comentarios"/>



        </LinearLayout>



    </LinearLayout>



</RelativeLayout>