<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F2"
    android:backgroundTint="#F0F0F2"
    tools:context=".Login.views.Signup">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="565dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/corner"
        android:radius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <EditText
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/inputform"
            android:ems="15"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:paddingLeft="10dp"
            android:text="Nombre(s)" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/poppins"
            android:paddingLeft="10dp"
            android:text="Apellidos" />
        <EditText
            android:id="@+id/lastName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:background="@drawable/inputform"
            android:ems="15"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="10dp"
            android:text="Correo" />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/inputform"
            android:ems="15"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/poppins"
            android:paddingLeft="10dp"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            android:background="@drawable/inputform"
            android:ems="15"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loggin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="370dp"
            android:background="@drawable/button_loggin"

            android:backgroundTint="@color/blue"
            android:fontFamily="@font/poppins_medium"
            android:onClick="sendData"
            android:text="Crear cuenta"
            android:textAllCaps="false">

        </Button>

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="470dp"
            android:fontFamily="@font/poppins"
            android:paddingStart="20dp"
            android:paddingLeft="10dp"
            android:text="¿Ya tienes una cuenta? Click aqui" />

    </FrameLayout>

    <TextView
        android:id="@+id/logIn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Crear cuenta"
        android:textColor="#1F1F39"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="Ingresa tus detalles para crear tu cuenta"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="@+id/logIn4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>