<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.fragments.ThirdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Busca un curso ideal"
                android:textColor="#1F1F39"
                android:fontFamily="@font/poppins_semibold"
                android:layout_weight="1"
                android:textSize="28sp"
                />

            <ImageView
                android:layout_marginTop="50dp"
                android:id="@+id/imageUser"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>
        <!--Barra de busqueda-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.SearchView
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#F4F3FD"
                android:background="@drawable/cards"
                android:iconifiedByDefault="false"
                android:queryHint="Buscar"
                android:text="Buscar"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/nameCourse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/black">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/cardgirl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Desaroollo en Java"
                        android:textColor="#1F1F39"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins"
                        android:text="Valdi god"
                        android:textColor="#B8B8D2"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/corner"
                        android:backgroundTint="#FFEBF0"
                        android:fontFamily="@font/poppins"
                        android:text="16 horas"
                        android:textAlignment="center"
                        android:textColor="#FF6905"
                        android:textSize="10sp" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>